extends layout

block stylesheet
	link(rel='stylesheet', href='/stylesheets/login.css')

block content
	div.container#login
		div.jumbotron#loginframe
			h1 
				i.fa.fa-comments 
				| Welcome to Messenger
			form(class='form-signin' role='form' method='post' action='/login')
				input(type='text', name='fname', placeholder='First Name', class='form-control', autocomplete='off' required autofocus)
				input(type='text', name='lname', placeholder='Last Name', class='form-control', autocomplete='off' required)
				input(type='text', name='username', placeholder='User Name', class='form-control', autocomplete='off' required)
				input(type='submit', value='Join', class='btn btn-primary', id='join')
		